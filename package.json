  "repository": {
    "type": "git",
    "url": "git+https://github.com/Falcion/Zustandsmaschine.git"
  },
  "keywords": [
    "state-machine",
    "sequencer",
    "dotnet",
    "csharp",
    "message-system",
    "deployment",
    "kafka",
    "stateflow",
    "finite-automaton",
    "debug-system",
    "debug",
    "ecosystem"
  ],
  "author": "Falcion",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Falcion/Zustandsmaschine/issues"
  },
  "homepage": "https://github.com/Falcion/Zustandsmaschine#readme",
  "readme": "https://github.com/Falcion/Zustandsmaschine#readme",
  "directories": {
    "doc": "docs",
    "bin": "source",
    "test": "tests",
    "man": ".github"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "husky": "^8.0.0",
